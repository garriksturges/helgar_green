- form_for @recipe do |f|
  = f.label :name, 'Name:'
  = f.text_field :name
  %table#INGREDIENTS
    = f.fields_for :parts do |p|
      %tr
        %td
          = p.label :amount
          = p.text_field  :amount
      %tr
        %td
          = p.label :ingredient
          = p.collection_select :ingredient_id, Ingredient.all, :id, :name 
  = link_to "Add Another Ingredient", "add_part", :remote=>true
  = f.submit :submit
